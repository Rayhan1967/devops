[program:devops-app]
command={{ app_directory }}/venv/bin/gunicorn --bind 0.0.0.0:5000 --workers 4 --timeout 120 main:app
directory={{ app_directory }}/app
user={{ app_user }}
autostart=true
autorestart=true
redirect_stderr=true
stdout_logfile={{ app_directory }}/logs/app.log
environment=ENV_FILE="{{ app_directory }}/.env"

